# Environment Variables for Samsung Product Launch Planner
# Copy this file to .env and add your actual API keys

# =============================================================================
# MARKET DATA APIs
# =============================================================================

# Alpha Vantage (Stock Market Data) - Free tier: 25 requests/day
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# FRED (Federal Reserve Economic Data) - Free with registration
# Get your API key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# =============================================================================
# NEWS & SOCIAL MEDIA APIs
# =============================================================================

# News API - Free tier: 1000 requests/month
# Get your API key at: https://newsapi.org/register
NEWS_API_KEY=bc49bd63babc47d38de4d6d706651c28

# Twitter API v2 - Free tier: 500,000 tweets/month
# Apply at: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API - Free with registration
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=9yZ8rLmY5iweGiOHyrpetA
REDDIT_CLIENT_SECRET=xBNi_uDGE1uYVVmatz9YbctajM-U6A
REDDIT_USER_AGENT=SamsungProductLaunchPlanner/1.0

# =============================================================================
# COMPETITOR & PRICING APIs
# =============================================================================

# RapidAPI (Multiple APIs) - Free tier available
# Get your key at: https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key_here

# Scraperapi (Web Scraping) - Free tier: 1000 requests/month
# Get your key at: https://www.scraperapi.com/
SCRAPERAPI_KEY=your_scraperapi_key_here

# =============================================================================
# SOCIAL MEDIA ANALYTICS
# =============================================================================

# Facebook Graph API - Free with approved app
# Get access at: https://developers.facebook.com/
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# YouTube Data API - Free tier: 10,000 requests/day
# Get your key at: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Instagram Basic Display API - Free with approved app
# Get access at: https://developers.facebook.com/docs/instagram-api
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# =============================================================================
# ADDITIONAL APIs (Optional)
# =============================================================================

# OpenWeatherMap (Weather data for seasonality) - Free tier available
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Exchange Rates API (Currency conversion) - Free tier available
EXCHANGE_RATES_API_KEY=your_exchange_rates_api_key_here

# Google Trends (No API key needed, but rate limited)
# Used directly via pytrends library

# =============================================================================
# API RATE LIMITS & SETTINGS
# =============================================================================

# Rate limiting settings (requests per minute)
ALPHA_VANTAGE_RATE_LIMIT=5
NEWS_API_RATE_LIMIT=16
TWITTER_RATE_LIMIT=300
REDDIT_RATE_LIMIT=60
RAPIDAPI_RATE_LIMIT=100

# Cache settings
CACHE_ENABLED=true
CACHE_DURATION_HOURS=24
CACHE_MAX_SIZE_MB=100

# Timeout settings (seconds)
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0